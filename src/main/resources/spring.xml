<?xml version = "1.0" encoding = "UTF-8"?>

<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:context="http://www.springframework.org/schema/context"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
       http://www.springframework.org/schema/beans/spring-beans-3.0.xsd
      http://www.springframework.org/schema/context
    http://www.springframework.org/schema/context/spring-context.xsd">

    <context:component-scan base-package="com.basics.context">
    </context:component-scan>
<!--    A simple bean definition -->
   <bean id = "doctor" class = "com.basics.context.Doctor">
       <constructor-arg value="Neuro"></constructor-arg>
    <property name="qualification" value="MBBS"></property>
   </bean>
	<bean id = "nurse" class = "com.basics.context.Nurse"> </bean>
   
</beans>